<Page
  x:Class="ReserV7.Views.Pages.LoginPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ReserV7.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="LoginPage"
  d:DataContext="{d:DesignInstance local:LoginPage, IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="1000"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d"
>
    <Grid Margin="20" Background="#f8f9fa">
        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="360"
            Padding="36,52"
            CornerRadius="16"
            Background="#FFFFFF"
            BorderBrush="#FFFFFF"
            BorderThickness="2"
        >
            <Border.Effect>
                <DropShadowEffect
                    Color="#000000"
                    BlurRadius="20"
                    ShadowDepth="4"
                    Opacity="0.15"
                />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Connexion" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" />
                <TextBlock Text="Nom d'utilisateur" />
                <TextBox Text="{Binding ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,8" />
                <TextBlock Text="Mot de passe" />
                <TextBox Text="{Binding ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,8" />
                <Button Content="Se connecter" Command="{Binding ViewModel.LoginCommand}" Margin="0,12,0,0" HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>