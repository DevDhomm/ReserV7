<Window
  x:Class="ReserV7.Views.Windows.DialogWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="Dialog"
  Width="500"
  WindowStartupLocation="CenterOwner"
  ShowInTaskbar="False"
  WindowStyle="SingleBorderWindow"
  SizeToContent="Height"
  d:DesignHeight="300"
  d:DesignWidth="500"
  mc:Ignorable="d"
>
  <Border
    Background="{DynamicResource ApplicationBackgroundBrush}"
    
    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
    BorderThickness="2"
    Padding="0"
  >
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <!-- Header -->
      <Border
        Grid.Row="0"
        Background="{DynamicResource ControlFillColorDefaultBrush}"
        Padding="24,20,24,20"
        CornerRadius="16,16,0,0"
        BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
        BorderThickness="0,0,0,1"
      >
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock
            Grid.Column="0"
            FontSize="18"
            FontWeight="Bold"
            Text="{Binding Title}"
			
			
          />

          <!-- Close Button -->
         <!-- <Button
            Grid.Column="1"
            Width="36"
            Height="36"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Background="{DynamicResource ControlFillColorSecondaryBrush}"
            BorderThickness="0"
            Click="CloseButton_Click"
            Cursor="Hand"
          >
            <TextBlock Text="X" FontSize="18" Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
          </Button> -->
        </Grid>
      </Border>

      <!-- Content -->
      <Border Grid.Row="1" Padding="24,20,24,20">
        <TextBlock
          Text="{Binding Message}"
          TextWrapping="Wrap"
          
          LineHeight="22"
        />
      </Border>

      <!-- Buttons -->
      <Border
        Grid.Row="2"
        Background="{DynamicResource ControlFillColorSecondaryBrush}"
        Padding="24,16,24,16"
        CornerRadius="0,0,16,16"
        BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
        BorderThickness="0,1,0,0"
      >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
          <Button
            Name="SecondaryButton"
            MinWidth="100"
            Padding="12,8,12,8"
            Margin="0,0,12,0"
            Background="{DynamicResource ControlFillColorSecondaryBrush}"
            BorderThickness="1"
            BorderBrush="{DynamicResource ControlBorderBrush}"
            Click="SecondaryButton_Click"
            Content="Non"
            Visibility="Collapsed"
          />
          <Button
            Name="PrimaryButton"
            MinWidth="100"
            Padding="12,8,12,8"
            Background="CadetBlue"
            Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
            BorderThickness="0"
            Click="PrimaryButton_Click"
            Content="OK"
          />
        </StackPanel>
      </Border>
    </Grid>
  </Border>
</Window>
